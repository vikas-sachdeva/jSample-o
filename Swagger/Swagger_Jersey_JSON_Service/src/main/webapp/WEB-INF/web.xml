<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<servlet>
		<servlet-name>Jersey REST Service</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<!-- Add swagger package name -->
			<param-value>io.swagger.jaxrs.listing,jsample.resources</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Jersey REST Service</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>

	<!-- Add swagger servlet details -->
	<!-- URL of swagger.json file is http://localhost:8080/Swagger_Jersey_JSON_Service/rest/swagger.json -->
	<!-- URL of swagger.yaml file is http://localhost:8080/Swagger_Jersey_JSON_Service/rest/swagger.yaml -->
	<servlet>
		<servlet-name>Jersey2Config</servlet-name>
		<servlet-class>io.swagger.jersey.config.JerseyJaxrsConfig</servlet-class>
		<init-param>
			<param-name>api.version</param-name>
			<param-value>1.0.0</param-value>
		</init-param>
		<init-param>
			<!-- This parameter is used in curl commands generated by swagger UI for 
				calling APIs. Value of this parameter should be the base path where all APIs 
				are deployed. -->
			<param-name>swagger.api.basepath</param-name>
			<param-value>http://localhost:8080/Swagger_Jersey_JSON_Service/rest</param-value>
		</init-param>
		<init-param>
			<param-name>scan.all.resources</param-name>
			<param-value>true</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<!-- Filer for enabling CORS (Cross-Origin Resource Sharing) support in 
		tomcat so that swagger.json file can be accessed from local swagger UI without 
		deploying swagger UI on server. -->
	<filter>
		<filter-name>CorsFilter</filter-name>
		<filter-class>org.apache.catalina.filters.CorsFilter</filter-class>
		<init-param>
			<param-name>cors.allowed.methods</param-name>
			<param-value>GET, POST, PUT, DELETE, OPTIONS, HEAD</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CorsFilter</filter-name>
		<url-pattern>/rest/*</url-pattern>
	</filter-mapping>
</web-app>